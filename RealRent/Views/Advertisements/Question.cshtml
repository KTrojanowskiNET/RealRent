@model RealRent.Models.UserMessageViewModel

@{ Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card" style="background-color:rgb(131, 196, 228)">
    <div class="container py-3">
        <h3 class="text-center rounded text-white" style="background-color:rgb(41, 47, 76)">Pytanie dotyczące ogłoszenia</h3>
        <div class="row">
            <div class=" offset-4 col-4">
                <form>
                    <div class="form-group">
                        <label>Treść wiadmości</label>
                        <textarea class="form-control" asp-for="Text" rows="3"></textarea>
                        <input type="hidden" asp-for="SenderName" />
                        <input type="hidden" asp-for="RecieverName" />
                        <input type="hidden" asp-for="SenderEmail" />
                        <input type="hidden" asp-for="RecieverEmail" />
                    </div>
                    <div class="text-center mb-2">
                        <button type="submit" class="btn btn-primary">Wyślij</button>
                        <a asp-action="Index" asp-controller="Customers" class="btn btn-danger ml-2">Anuluj</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>