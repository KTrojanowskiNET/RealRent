@model IEnumerable<RentModel.Models.Apartment>

@using RentModel.Models

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="row mx-0 px-0">
    <div class="col-12 mx-0 px-0 text-center container-fluid" style="position:relative">
        <img src="~/background/unnamed.jpg" style="width:100%;height:200px;" />
        <div class="mx-auto text-white display-4" style="position:absolute;bottom:30%;left:5%"><i>REAL-RENT</i></div>
    </div>
</div>
<br />
<br />

<div class="row mb-4">
    <div class="col-2">
        <div class="bg-dark text-white text-center py-2 px-3 ml-5">
            Liczba aktywnych ogłoszeń : @ViewBag.Counter
        </div>
    </div>
    <div class=" offset-7 col-3">
        <button id="btnDropdown" type="button" class="btn btn-danger btn-block text-white dropdown-toggle w-75 ml-auto mr-3"
                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Dodaj ogłoszenie
        </button>
        <div class="dropdown-menu">
            <a class="dropdown-item" asp-controller="Advertisements" asp-action="AddApartment">Mieszkanie</a>
            <a class="dropdown-item" asp-controller="Advertisements" asp-action="AddRoom">Pokój</a>
            <a class="dropdown-item" asp-controller="Advertisements" asp-action="AddHome">Dom</a>
            <a class="dropdown-item" asp-controller="Advertisements" asp-action="AddCommercialSpace">Lokal użytkowy</a>
            <a class="dropdown-item" asp-controller="Agencies" asp-action="CreateAgency">Dodaj Agencję</a>
        </div>
    </div>
</div>
<div class="row mb-5">
    <div class="col-12">
        <div class="btn-group-lg d-flex">
            <a class="btn btn-light btn-lg w-75 text-dark" asp-controller="Customers" asp-action="Index">Promowane</a>
            <a class="btn btn-light btn-lg w-75 text-dark" asp-controller="Homes" asp-action="List">Domy</a>
            <a class="btn border border-dark btn-lg w-75 text-white" style="background-color:rgb(41, 47, 76)">Mieszkania</a>
            <a class="btn btn-light btn-lg w-75 text-dark" asp-controller="Rooms" asp-action="List">Pokoje</a>
            <a class="btn btn-light btn-lg w-75 text-dark" asp-controller="CommercialSpaces" asp-action="List">Lokale użytkowe</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-10">
        @foreach (var item in Model)
        {
            @await Component.InvokeAsync("BasePropertiesList", new { property = item })
        }
    </div>
    <div class="col-2">
        @await Component.InvokeAsync("AgenciesList")
    </div>
</div>
