@model IEnumerable<RentModel.Models.AppUser>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Users</h1>

<table class="table table-striped table-light table-sm">
    <thead class="thead-dark">
        <tr>
            <th>
                Id
            </th>
            <th>
                Nazwa Użytkownika
            </th>
            <th>
                Imię
            </th>
            <th>
                Nazwisko
            </th>
            <th>
                Adres
            </th>
            <th>
                Email
            </th>
            <th>
                Hasło
            </th>
            <th>
                Nr tel
            </th>
            <th>
                Zarządzaj
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <th>@user.Id</th>
                <th>@user.UserName</th>
                <th>@user.FirstName</th>
                <th>@user.LastName</th>
                <th>@user.Address</th>
                <th>@user.Email</th>
                <th>@user.Password</th>
                <th>@user.PhoneNumber</th>
                <th>
                    <a class="btn btn-warning" asp-action="EditAccount" asp-controller="Account" asp-route-id="@user.Id">Edytuj</a>
                    <a class="btn btn-danger" asp-action="DeleteUser" asp-controller="Admin" asp-route-id="@user.Id">Usuń</a>
                </th>
            </tr>
        }
    </tbody>
</table>