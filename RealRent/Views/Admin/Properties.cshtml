@model IEnumerable<RentModel.Models.IProperty>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-striped table-light table-sm">
    <thead class="thead-dark">
        <tr>
            <th>
                Nazwa
            </th>
            <th>
                Miasto
            </th>
            <th>
                Adres
            </th>
            <th>
                Pow.
            </th>
            <th>
                Cena
            </th>
            <th>
                Budowa
            </th>
            <th>
                Prom.
            </th>
            <th>
                Pośr.
            </th>
            <th>
                Zal.
            </th>
            <th>
                Typ
            </th>
            @*<th>
                AdId
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SquareMetrage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConstructionYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MainPageDisplay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgencyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Advance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PropertyType)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.AdId)
            </td>*@
            <td>
                <a class="btn btn-warning text-white" asp-route-name="@item.Name" asp-route-type="@item.PropertyType" asp-controller="Admin" asp-action="Edit">Edytuj</a>
                <a class="btn btn-danger text-white" asp-action="DeleteProperty" asp-controller="Admin" asp-route-type="@item.PropertyType" asp-route-name="@item.Name">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
