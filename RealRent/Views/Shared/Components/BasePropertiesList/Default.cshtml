@model IProperty

@using RentModel.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


        <div class="row rounded pt-3 px-0 mb-2" style="background-color:rgb(131, 196, 228)">
            <div class="col-3">
                <img src="@ViewBag.Pic" class="rounded" asp-append-version="true" style="max-width:225px;height:180px;width:100%;" />
            </div>
            <div class="col-9">
                <div class="card text-white mx-0" style="background-color:rgb(6, 6, 6)">
                    <div class="card-header text-center"><b>@Model.Name</b></div>
                </div>
                <div class="card-body">
                    <div class="card-text text-dark">
                        @Model.ShortDescription
                       <a asp-action="Details" asp-controller="Advertisements" asp-route-type="@Model.PropertyType" asp-route-name="@Model.Name"
                          class="btn btn-light btn-sm text-dark float-right mt-2 ml-5">Szczegóły</a>
                        
                    </div>
                </div>
                <div class="text-white rounded mt-3" style="max-height:60px;background-color:rgb(41, 47, 76);">
                    <ul class="list-inline list-unstyled text-center">
                        <li class="list-inline-item mx-4">Typ: @Model.PropertyType.ToString()</li>
                        <li class="list-inline-item mx-4">Powieszchnia: @Model.SquareMetrage.ToString()</li>
                        <li class="list-inline-item mx-4">Cena: @Model.Price</li>
                        <li class="list-inline-item mx-4">
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    
