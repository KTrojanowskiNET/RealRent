@model RealRent.ViewModels.AddAgencyViewModel

@{
    ViewData["Title"] = "CreateAgency";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
<div class="justify-content-center align-items-center">

    <hr />
    <div class="row">
        <div class="offset-3 col-6">
            <form asp-action="CreateAgency" method="post" style="background-color:rgb(131, 196, 228)">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <h3 class="text-center mt-5 pt-3">Dodaj Agencję</h1>
                <div class="form-group mt-3 px-4">
                    <label asp-for="Name" class="control-label">Nazwa</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mt-3 px-4">
                    <label asp-for="Address" class="control-label">Adres</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group mt-3 px-4">
                    <label asp-for="PhoneNumber" class="control-label">Tel.</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group mt-3 text-center pb-2">
                    <input type="submit" value="Dodaj" class="btn btn-primary" />
                    <a asp-action="Index" asp-controller="Customers" class="btn btn-danger ml-2">Anuluj</a>
                </div>
            </form>
        </div>
    </div>

    <div>
    </div>
    </div>
    </div>

